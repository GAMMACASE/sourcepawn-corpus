/* Plugin Template generated by Pawn Studio */

#include <sourcemod>

public Plugin:myinfo = 
{
	name = "Rulez_Mod",
	author = "{7~11} Troll",
	description = "Simple Rules Display Mod.",
	version = "1.0.1",
	url = "www.711clan.net"
}

new Handle:g_href = INVALID_HANDLE;
public OnPluginStart()
{
	RegConsoleCmd("rules", RulesOn);
	g_href = CreateConVar("sm_rules_href", "www.711clan.net", "href link to the rules for this server");
}
public Action:RulesOn(client,args)
{
	decl String:href[255];
	GetConVarString(g_href, href, sizeof(href));
	ShowMOTDPanel(client, "rules", href, MOTDPANEL_TYPE_URL);
	return Plugin_Continue;
}