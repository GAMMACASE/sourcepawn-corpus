#include <sourcemod>#include <sdktools>public Plugin:myinfo ={    name = "[L4D2] DeathCheck Toggle",    author = "Death",}static bool:Death[MAXPLAYERS];public OnPluginStart(){    SetConVarInt(FindConVar("director_no_death_check"), 1);    HookEvent("player_death", PlayerDeath);}public PlayerDeath(Handle:event, const String:name[], bool:dontBroadcast){    new Client = GetClientOfUserId(GetEventInt(event, "userid"));	Death[Client] = true;	new bool:SomeonesAlive = false;    for(new i = 1; i <= MaxClients; i++)	{        if(IsClientConnected(i))		{			if(IsClientInGame(i))			{				if(!Death[i]) SomeonesAlive = true;			}		}    }        if(!SomeonesAlive) SetConVarInt(FindConVar("director_no_death_check"), 0);}  