bool:IsValidAttacker(client)
{
	new var1;
	return 0 < client <= MaxClients && IsClientInGame(client) && !IsFakeClient(client);
}

bool:IsValidVictim(client)
{
	new var1;
	return 0 < client <= MaxClients && IsClientInGame(client);
}

public void:Entity_HealthChanged(String:output[], caller, activator, Float:delay)
{
	new var1;
	if (IsValidAttacker(activator) && IsValidEntity(caller))
	{
		new g_iPropHP = GetEntProp(caller, 1, "m_iHealth", 4, 0);
		if (g_iPropHP > 0)
		{
			PrintCenterText(activator, "%t", "PropDamage", g_iPropHP);
		}
	}
	return 0;
}

public void:Event_PlayerHurt(Event:event, String:name[], bool:dontBroadcast)
{
	new g_iAttacker = GetClientOfUserId(Event.GetInt(event, "attacker", 0));
	new g_iVictim = GetClientOfUserId(Event.GetInt(event, "userid", 0));
	new var1;
	if (IsValidAttacker(g_iAttacker) && IsValidVictim(g_iVictim) && g_iVictim != g_iAttacker)
	{
		new g_iPlayerHP = GetClientHealth(g_iVictim);
		if (g_iPlayerHP > 0)
		{
			new var2;
			if (GetClientTeam(g_iAttacker) == 3 && GetClientTeam(g_iVictim) == 2)
			{
				PrintCenterText(g_iAttacker, "%t", "PlayerDamage", g_iVictim, g_iPlayerHP);
			}
			new var3;
			if (GetClientTeam(g_iAttacker) == 2 && GetClientTeam(g_iVictim) == 3)
			{
				PrintCenterText(g_iAttacker, "%t", "Infected", g_iVictim);
			}
		}
	}
	return 0;
}

public void:OnPluginStart()
{
	HookEvent("player_hurt", 7, 1);
	HookEntityOutput("func_breakable", "OnHealthChanged", 5);
	LoadTranslations("realhp.phrases");
	return 0;
}

