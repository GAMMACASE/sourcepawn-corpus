/* Plugin Template generated by Pawn Studio */

#pragma semicolon 1

#include <sourcemod>

public Plugin:myinfo = 
{
	name = "Language ID",
	author = "Powerlord",
	description = "Print details of language to user/console",
	version = "1.0",
	url = "https://forums.alliedmods.net/showthread.php?t=162164"
}

public OnPluginStart()
{
	RegAdminCmd("languageid", LanguageID, ADMFLAG_GENERIC, "Print details of language to user/console");
}


public Action:LanguageID(client, args)
{
	if (args > 0)
	{
		decl String:languageNumString[3];
		GetCmdArg(1, languageNumString, sizeof(languageNumString));
		new languageNum = StringToInt(languageNumString);
		
		decl String:languageName[MAX_NAME_LENGTH];
		decl String:languageCode[4];
		
		GetLanguageInfo(languageNum, languageCode, sizeof(languageCode), languageName, sizeof(languageName));
		ReplyToCommand(client, "Name: %s, Code: %s", languageName, languageCode);
	}
	
	return Plugin_Handled;
}
